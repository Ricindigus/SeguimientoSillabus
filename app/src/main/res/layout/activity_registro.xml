<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dmorales.seguimientosillabus.activities.RegistroActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRO DE SILLABUS"
            android:gravity="center"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistemas Operativos (SS)"
            android:textColor="@color/colorIcons"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin5dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/img_anterior"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:padding="@dimen/margin5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/flecha_adelante"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTituloFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:textStyle="bold"
                android:textColor="@color/colorIcons"
                android:text="UNIDADES DIDÁCTICAS"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top">
                <TextView
                    android:id="@+id/txtDot1"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center|top"
                    android:text="o"
                    android:textColor="@color/colorIcons"/>
                <TextView
                    android:id="@+id/txtDot2"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="o"
                    android:gravity="center|top"
                    android:textColor="@color/colorIcons"/>
                <TextView
                    android:id="@+id/txtDot3"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center|top"
                    android:text="o"
                    android:textColor="@color/colorIcons"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/img_siguiente"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:rotation="180"
            android:scaleType="fitCenter"
            android:padding="@dimen/margin5dp"
            android:src="@drawable/flecha_adelante"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_fragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
