<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.dmorales.seguimientosillabus.fragments.SemanasFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margenMaterial">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="NÂ°"
                    android:textColor="@color/colorIcons"
                    android:layout_height="match_parent"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:text="TEMAS"
                    android:textColor="@color/colorIcons"
                    android:layout_height="match_parent"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_recycler">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/semanas_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin5dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_semanas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_agregar"
                android:layout_margin="@dimen/margenMaterial"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:backgroundTint="@color/colorPrimaryDark"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
